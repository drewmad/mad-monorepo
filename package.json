{
  "name": "mad-monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "vitest run && pnpm e2e",
    "e2e": "playwright test",
    "e2e:headed": "playwright test --headed",
    "cz": "git-cz",
    "prepare": "husky install",
    "typecheck": "turbo run typecheck",
    "validate:imports": "./scripts/validate-imports.sh",
    "validate:all": "./scripts/validate-all.sh",
    "validate:deploy": "./scripts/validate-deploy.sh",
    "validate": "pnpm validate:all",
    "fix:imports": "pnpm fix:imports:ui && pnpm fix:imports:db",
    "fix:imports:ui": "find . -name '*.ts' -o -name '*.tsx' | xargs sed -i '' \"s/from '@ui\\/[^']*'/from '@ui'/g\"",
    "fix:imports:db": "find . -name '*.ts' -o -name '*.tsx' | xargs sed -i '' \"s/from '@db\\/[^']*'/from '@db'/g\"",
    "prevalidate:deploy": "pnpm validate:all",
    "preinstall": "npx only-allow pnpm",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.2.0",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/node": "^20.11.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.7",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.1",
    "only-allow": "^1.2.1",
    "pnpm": "^8.15.6",
    "prettier": "^3.3.1",
    "turbo": "latest",
    "typescript": "5.4.5",
    "vite": "^5.2.0",
    "vitest": "^1.6.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix"
  }
}